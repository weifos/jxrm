          <view class="search_ul flex">
            <view>公司的</view>
          </view>
        </view>
        <view class="search_history" style="display:none;">
          <view class="history_tit flex">
            <text>历史搜索</text>
            <text>清空</text>
          </view>
          <view class="history_ul">
            <view class="flex">
              <view>是是的</view>
              <image src="../../images/AcceptOrdersImg/quxiao_@2x.png"></image>
