<view class="container">
  <view class="header">
    <view style="width: 0%;"> </view>
    <view class="flex searchs_div">
      <image src="../../images/AcceptOrdersImg/search_h.png"></image>
      <input type="text" bindinput='inputedit' data-name="skeyword" placeholder="输入关键词进行搜索" maxlength="50" />
