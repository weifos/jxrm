/* miniprogram/pages/search/search.wxss */

.content {
  bottom: 0;
  top: 103rpx;
}

.icon_type_back {
  display: inline-block;
  height: 0.385rem;
  vertical-align: middle;
}

.h_cen_txt_style {
  font-size: 0.43rem;
  color: #333;
}

.header {
  display: flex;
  align-items: center;
  padding: 0rpx 15rpx;
  background-color: #fff;
  height: 100rpx;
}

.header .searchs_div {
  padding:6rpx 8rpx;
  background-color: #eee;
  width: 82%;
  align-items: center;
  border-radius:35rpx;
  padding-left:15rpx;


}

.header .searchs_div > image {
  width: 27rpx;
  height: 27rpx;
  background-size: cover;
}

.header .searchs_div > input {
  border: none;
  background-color: #eee;
  font-size: 28rpx;
  color: #333;
  margin-left: 15rpx;
  min-width: 90%;
  height: 50rpx;
}

.header .btn_s {
  width: 12%;
  text-align: center;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.search_c .search_div {
  padding: 0 20rpx 0 20rpx;
  background-color: #fff;
}

.search_div .search_ul {
  padding: 6rpx 0;
  align-items: center;
  flex-wrap: wrap;
}

 .search_div_tit {
  padding: 15rpx 0;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  background: #fff;
  padding-left:20rpx;
}

.search_div .search_ul > view {
  padding: 4rpx 10rpx;
  border: 2rpx solid #ddd;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  margin-left: 12rpx;
}

.search_div .search_ul > view:last-child {
  border-bottom: none;
}

.search_c .search_history {
  width: 100%;
  margin-top: 10rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.search_history .history_tit {
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  border-bottom: 2rpx solid #eee;
}

.history_tit > image {
  width: 30rpx;
  height: 0.35rem;
  background-size: cover;
}

.search_history .history_ul > view {
  padding: 15rpx 20rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
  
}

.search_history .history_ul > view:last-child {
  border-bottom: none;
}

.search_history .history_ul > view > image {
  width: 30rpx;
  height: 30rpx;
  background-size: cover;
}


.type_list{
  /* width: 100%; */
  padding: 15rpx;
  background: #fff;
  align-items: center;
  flex-wrap: wrap;
}
.type_li{
  width: 21%;
  height: 65rpx;
  border: 1px solid #ebebeb;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  margin-left: 2.8%;
  text-align: center;
  line-height: 65rpx;
  background:#f1f1f1;
  color: #333;

}