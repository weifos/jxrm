/* miniprogram/pages/login/login.wxss */

.content {
  top: 0;
  bottom: 0;
}

.content_div {
  width: 100%;
  height: 100%;
}

.g_user_login {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.store_logo {
  width: 100%;
  padding: 15rpx 0;
  align-items: center;
  justify-content: center;
}

.store_logo>image {
  width: 288rpx;
  margin-top: 60rpx;
  height: 86rpx;
}

.mains_input {
  width: 100%;
  margin-top: 80rpx;
}

.inp_content {
  width: 100%;
}

.inp_content>view {
  width: 100%;
  padding: 15rpx 0;
  display: flex;
  justify-content: center;
}

.inp_content>view>.phone_div {
  width: 70%;
  border-bottom: 1px solid #f5f2f2;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 10rpx;
}

.inp_content>view>.phone_div input {
  border: none;
  height: 65rpx;
  width: 100%;
  font-size: 32rpx;
  color: #363636;
  text-indent: 15rpx;
}

.inp_content>view .yz_input {
  width: 70%;
  border-bottom: 1px solid #f5f2f2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 15rpx;
}

.inp_content>view .yz_input input {
  border: none;
  height: 65rpx;
  max-width: 43%;
  font-size: 32rpx;
  color: #363636;
  text-indent: 15rpx;
}

.inp_content>view .yz_input>view {
  padding: 10rpx;
  border: 1px solid #5795e8;
  border-radius: 8rpx;
  color: #5795e8;
  font-size: 28rpx;
}

.btn_login {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #fff;
  margin-top: 30rpx;
}

.btn_login>view {
  width: 70%;
  padding: 18rpx 0;
  background-color: #5795e8;
  border-radius: 10rpx;
  text-align: center;
  letter-spacing: 4rpx;
}

.copy {
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  font-size: 22rpx;
  color: #ddd;
  text-align: center;
}

.toast_div {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: -100%;
  left: 0;
  opacity: 0;
  transition: all 250ms ease-in-out;
  z-index: 600;
}

.show_toast {
  bottom: 0 !important;
  opacity: 1;
}

.toast_div .toast_c {
  width: 68%;
  height: 330rpx;
  border-radius: 15rpx;
  background: #fff;
  position: relative;
  text-align: center;
  color: #666;
}

.toast_div .toast_c>view {
  font-size: 28rpx;
}

.toast_div .toast_c .tlt_shuf {
  font-size: 40rpx;
  color: #000;
  padding: 25rpx 0;
}

.toast_div .toast_c .toast_shuf {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx 0;
}

.toast_div .toast_c .rules {
  font-size: 32rpx;
  color: #999;
  padding: 15rpx 0;
  margin-top: 15rpx;
}

.toast_div .toast_c .fast_login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #333;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #ebebeb;
  background: #f1f1f1;
}

