/* miniprogram/pages/home/home.wxss */
.content{
  bottom: 0;
  top: 0;
}
.content_div{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}

.content_div .search_p{
  width: 15%;
	padding: 4rpx;
	border: 1px solid #d2ac52;
	align-items: center;
	justify-content: center;
	border-radius: 10rpx;
	color: #d2ac52;
  position: fixed;
  top: 15rpx;
  right: 15rpx;
  z-index: 120;
}
.search_p>image{
	width: 30rpx;
	height: 30rpx;	
}
.search_p>text{
	margin-left: 10rpx;
  font-size: 30rpx;
}

.swipe_v{
  height:366rpx;
}
.banner{
	padding:0 2%;
  height:100%;
}

.c_main{
	width: 100%;
	padding: 30rpx 0;
}
.c_main .main_ul{

	display: flex;
 	height: 99%;
	padding: 0 2%;
	flex-wrap: wrap;
}
.c_main .main_ul>view{
	height: 240rpx;
	width: 48%;
	margin-bottom: 15rpx;
	position: relative;
}
.c_main .main_ul>view:nth-child(even){
	margin-left: 4%;
}
.c_main .main_ul>view .back_img{
	width: 100%;
	height: 100%;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 1;
	
}

.main_ul .tops1 .left_b{
	width:100%;
	height: 100%;
	color: #d2ac52;
	z-index: 10;
	
}
.main_ul .tops1 .left_b view{
	 height: 100%; 
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
