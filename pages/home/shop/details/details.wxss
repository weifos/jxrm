/* pages/shop/shop.wxss */
.shop-info{
  height: 380rpx;
  background-color: #eee;
  
}

.shop-info__name{
  white-space: nowrap;
  margin: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 36rpx;
  text-align: center;
  padding: 20rpx 0;
}
.hidden{
  overflow: hidden;
}
.dib{
  display: inline-block;
}
.tac{
  text-align: center;
}
.mr5{
  margin-right: 10rpx;
}
.vat{
  vertical-align: top;
}
.vam{
  vertical-align: middle;
}
.rel{
  position: relative;
}
.shop-info__img{
  padding: 0 20rpx;
  float:left;
}

.shop-info__img image{
  width: 250rpx;
  height: 250rpx;
  border:1px solid #ddd;
  padding: 2rpx;
}

.shop-info__desc{
  font-size:32rpx;
  width: 420rpx;
  height: 200rpx;
  overflow: hidden;
}

.page-shop .product-list{
  padding: 20rpx;
  font-size: 0;
  box-sizing:border-box;

}

.page-shop .product-item{
  width: 50%;
  display: inline-block;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx 0;
  
}

.page-shop .product-item:nth-child(2n){
  padding-right: 0;
}

.page-shop .product-item__img{
  border:1px solid #ddd;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.page-shop .product-item image{
  width: 352rpx;
  height: 352rpx;
  vertical-align: top;
}
.product-item__name{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 40rpx;
  max-width: 60%;
}
.color-red{
  color: #f00;
}
.i-collect{
  
  background: url(data:image/png;base64,) no-repeat 0 0 /100% auto;
  width: 36rpx;
  height: 32rpx;
  margin-right:10rpx;
}

.collected .i-collect{
  background-image: url(data:image/png;base64,);
}
.info__collect{
  font-size: 28rpx;
  position: absolute;
  bottom:0;
  right:20rpx;
}