/* pages/cateList/cateList.wxss */

.page-cateList .swipe_v{
position: relative;
z-index: 5;
  }
.cate-classify{
  height: 100%;
  box-sizing: border-box;
  padding-top: 150px;
  position: fixed;
  left: 0;
  top: 0;
  width: 240rpx;
  padding-bottom:123rpx;
  /* overflow: auto; */
  z-index: 1;
}
.cate-classify__wrap{
  background:#f1f1f1;
  height: 100%;
  overflow: auto;
  box-sizing: border-box;
}
.classify-list{
  padding: 20rpx;
}
.classify-main__name{
  font-size: 32rpx;
  margin-top:20rpx;
}
.classify-main__list-item{
  font-size: 28rpx;
  padding-left: 30rpx;
  line-height: 2.6;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cate-list{
  height: 100%;
  box-sizing: border-box;
  padding-top: 150px;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  padding-bottom:123rpx;
  padding-left:240rpx;
}

.cate-list__wrap{
  /* background-color: #000; */
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 0;
}

.cate-list-merchant__item{
  position: relative;
  width: 225rpx;
  overflow:hidden; 
  margin-bottom:20rpx;
  display: inline-block;
  margin-right:20rpx;
}
.cate-list-merchant__item:nth-child(2n){
  margin-right: 0;
}
.cate-list-merchant__image {
  width: 225rpx;
  height: 225rpx;
  
}
image{
  vertical-align: top;
}

.cate-list-merchant__name{
  position: absolute;
  background-color: rgba(0,0,0,0.5);
  color: #fff;
  font-size: 24rpx;
  left: 0;
  bottom: 0;
  padding:10rpx 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.cate-list-merchant__image image{
  width: 100%;
  height: 100%;
}