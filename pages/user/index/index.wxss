.user-info{
  background-color: #069e40;
  height: 240rpx;
  overflow: hidden;
  color: #fff;
  position: relative;
}

.user-info__img{
  margin:20rpx auto 10rpx auto;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #fff;
  
}

.btn-refresh{
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left:50%;
  -webkit-transform:translate(18rpx,18rpx);
  padding: 5rpx;
  box-sizing:unset;
}
.btn-refresh image{
  width: 30rpx;
  height:30rpx;
  vertical-align: top;
}


.user-info__img image{
  width: 100%;
  height:100%;
}

.user-info-content{
  /* padding: 45rpx; */
  font-size: 28rpx;
  text-align: center;
}

.user-info__id{
  /* margin-top: 20rpx; */
}

.correlation-item{
  border-bottom:1rpx solid #eee;
  padding:50rpx 50rpx ;
  font-size: 30rpx;
}

.correlation-item .icon{
  width: 42rpx;
  height: 42rpx;
  margin-right:15rpx;
  display: inline-block;
  vertical-align: middle;
}
.dib{
  display: inline-block;
}

.vam{
  vertical-align: middle;
}


.toast_div {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: -100%;
  left: 0;
  opacity: 0;
  transition: all 250ms ease-in-out;
  z-index: 600; 
}

.show_toast {
  bottom: 0 !important;
  opacity: 1;
}

.toast_div .toast_c {
  width: 68%;
  height: 330rpx;
  border-radius: 15rpx;
  background: #fff;
  position: relative;
  text-align: center;
  color: #666;
}

.toast_div .toast_c>view {
  font-size: 28rpx;
}

.toast_div .toast_c .tlt_shuf {
  font-size: 40rpx;
  color: #000;
  padding: 25rpx 0;
}

.toast_div .toast_c .toast_shuf {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx 0;
}

.toast_div .toast_c .rules {
  font-size: 32rpx;
  color: #999;
  padding: 15rpx 0;
  margin-top: 15rpx;
}

.toast_div .toast_c .fast_login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #333;
  position: absolute;
  bottom: 0;
  border-top: 1px solid #ebebeb;
  background: #f1f1f1;
}

