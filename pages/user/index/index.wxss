.user-info{
  background-color: #eee;
  height: 240rpx;
  overflow: hidden;
}

.user-info__img{
  float: left;
  margin: 40rpx;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #ddd;
}

.user-info__img image{
  width: 100%;
  height:100%;
}

.user-info-content{
  padding: 45rpx;
  font-size: 28rpx;
}

.user-info__id{
  margin-top: 20rpx;
}

.user-correlation{
  border-top:5rpx solid #4786e3;
}
.correlation-item{
  border-top:1rpx solid #eee;
  border-bottom:1rpx solid #eee;
  padding: 20rpx ;
  font-size: 28rpx;
}