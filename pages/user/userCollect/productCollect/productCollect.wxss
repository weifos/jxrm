/* pages/collect/collect.wxss */
.page-collect .product-list{
  padding: 20rpx;
  font-size: 0;
}

.page-collect .product-item{
  width: 50%;
  display: inline-block;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx 20rpx 0;
}

.page-collect .product-item:nth-child(2n){
  padding-right: 0;
}

.page-collect .product-item__img{
  border:1px solid #ddd;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.page-collect .product-item image{
  width: 100%;
  height: 250rpx;
}

.product-item__name{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  height: 40rpx;
  width: 100%;
  text-align: center;
}